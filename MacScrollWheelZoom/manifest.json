{
   "manifest_version": 3,
   "name": "Mac Scroll Wheel Zoom",
   "description": "Scroll wheel zooming for MacOS from Windows",
   "version": "1.0.0",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "js/background.js"
    },
    "action": {
      "default_title": "Toggle Zoom Overlay"
    },
   "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "js/functions.js",
          "js/cssStyles.js",
          "js/overlay.js",
          "js/zoom.js",
          "js/events.js"
        ]
      }
    ],
   "icons": {
      "16": "img/16.png",
      "32": "img/32.png",
      "48": "img/48.png",
      "64": "img/64.png",
      "96": "img/96.png",
      "128": "img/128.png"
   }
}